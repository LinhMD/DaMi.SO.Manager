@inherits XComponent<OrderMasterTableModel>
@layout _Layout
@inject IStringLocalizer<ShareResource> L

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0 justify-content-sm-start mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/OrderMaster">@L["Đơn Hàng"]</a></li>
        </ol>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <a href="/OrderMaster/Create" class="btn btn-success btn-bordered btn-round">@L["Lập đơn hàng mới"]</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">@L["Đơn Hàng"]</div>
            </div>
            <div class="card-body">
                <div class="overflow-auto">
                    <Table Models="@Model.OrderMasters" TItem="OrderMasterSimpleView">
                        <NavLabel>
                            @L["Số đơn Hàng"]
                        </NavLabel>
                        <NavKey Context="o">
                            <a href="/OrderMaster/Details/@o.RowUniqueId">@o.OrderNo</a>
                        </NavKey>
                        <ActionLabel></ActionLabel>
                        <Action Context="o">
                            <div>
                                <a href="/OrderMaster/Edit/@o.RowUniqueId"><i
                                        class="mdi mdi-pencil-box i-warning"></i></a>
                                <a href="/OrderMaster/Details/@o.RowUniqueId"><i
                                        class="mdi mdi-magnify i-primary"></i></a>
                            </div>
                        </Action>
                    </Table>
                </div>
            </div>
        </div>
    </div>
</div>
